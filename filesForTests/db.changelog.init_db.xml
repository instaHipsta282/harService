    <changeSet id="3" author="instahipsta282">
        <createTable tableName="request_headers">
            <column name="request_id" type="bigint">
                <constraints foreignKeyName="request_header_fk" references="request(id)" nullable="false"/>
            </column>
            <column name="headers_val" type="varchar(25000)"/>
            <column name="headers_key" type="varchar(25000)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="request_id, headers_key"
                       constraintName="request_headers_pk"
                       schemaName="public"
                       tableName="request_headers"/>
    </changeSet>

    <changeSet id="4.1" author="instahipsta282">
        <createTable tableName="request_params">
            <column name="request_id" type="bigint">
                <constraints references="request(id)" foreignKeyName="request_param_fk" nullable="false"/>
            </column>
            <column name="params_val" type="varchar(25000)"/>
            <column name="params_key" type="varchar(25000)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="request_id, params_key"
                       constraintName="request_params_pk"
                       schemaName="public"
                       tableName="request_params"/>
    </changeSet>

